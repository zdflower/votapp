extends layout
block content
  .row
    .col-sm-12.col-md-6
      section.login
        h1 Log in
        section
          a(href="/auth/github")
            button.btn.btn-primary Log in with Github
              i.fa.fa-github

    .col-sm-12.col-md-6
      section.login
        h2 Log in local
        form(action="/login" method="post")
          .form-group
            .input-group
              label.input-group-addon Username:
              input.form-control(type="text" name="username" autofocus)
          .form-group
            .input-group
              label.input-group-addon Password:
              input.form-control(type="password" name="password")
          input.btn.btn-primary(type="submit" value="Log In locally")
