extends layout
block content
  h1 Sign up
  form(action="/signup" method="post")
    .form-group
      label Username:
        input.form-control(type="text" name="username" autofocus)
    .form-group
      label Password:
        input.form-control(type="password" name="password")
    .form-group
      label Re-enter password:
        input.form-control(type="password" name="passwordRe")
    input.btn.btn-primary(type="submit" value="Sign up")
