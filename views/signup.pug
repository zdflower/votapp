extends layout
block content
  h1 Sign up

  if errors
    each error in errors
      div(class="alert alert-dismissable alert-danger")
        button(type="button" class="close" data-dismiss="alert") &times
        p #{error}
  .row
    .col-sm-12.col-md-6
      form(action="/signup" method="post")
        .form-group
          label Username:
            input.form-control(type="text" name="username" autofocus)
        .form-group
          label Password:
            input.form-control(type="password" name="password")
        .form-group
          label Re-enter password:
            input.form-control(type="password" name="passwordRe")
        input.btn.btn-primary(type="submit" value="Sign up")
    .col-sm-12.col-md-6
      h3 Alternative
      a(href="/auth/github")
        button.btn.btn-primary Sign up with Github
          i.fa.fa-github
